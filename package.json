{
  "name": "@bordertech/idgray",
  "version": "0.0.1",
  "homepage": "https://bordertech.github.io/idgray/",
  "author": "bordertech<bordertech@border.gov.au>",
  "description": "Responsive CSS helper classes based on Grid",
  "main": "docs/css/idgray.css",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BorderTech/idgray.git"
  },
  "license": "MIT",
  "keywords": [
    "css",
    "grid",
    "sass",
    "masonry",
    "flexbox",
    "responsive",
    "framework"
  ],
  "bugs": {
    "url": "https://github.com/BorderTech/issues"
   },
  "devDependencies": {
    "node-sass": "4.5.3",
    "rimraf": "2.6.1"
  },
  "scripts": {
    "build": "npm run build-clean && npm run build-sass && npm run build-sass-min",
    "build-clean": "rimraf docs/css",
    "build-sass": "node-sass --output-style expanded sass/base.scss docs/css/idgray.css",
    "build-sass-min": "node-sass --output-style compressed sass/base.scss docs/css/idgray-min.css"
  },
  "files": [
    "docs",
    "sass",
    "LICENSE",
    "README.md"
  ]
}