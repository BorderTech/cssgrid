{
  "name": "@bordertech/idgray",
  "version": "0.0.2",
  "homepage": "https://bordertech.github.io/idgray/",
  "author": "bordertech<bordertech@border.gov.au>",
  "description": "Responsive CSS helper classes based on Grid",
  "main": "dist/idgray.css",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BorderTech/idgray.git"
  },
  "license": "MIT",
  "keywords": [
    "css",
    "grid",
    "sass",
    "masonry",
    "flexbox",
    "responsive",
    "framework"
  ],
  "bugs": {
    "url": "https://github.com/BorderTech/idgray/issues"
  },
  "devDependencies": {
    "node-sass": "4.5.3",
    "rimraf": "2.6.1"
  },
  "scripts": {
    "build": "yarn run build-clean && yarn run build-sass && yarn run build-sass-min",
    "build-clean": "rimraf dist",
    "build-sass": "node-sass --output-style expanded sass/base.scss dist/idgray.css",
    "build-sass-min": "node-sass --output-style compressed sass/base.scss dist/idgray-min.css",
    "release": "yarn run build && yarn publish --access public"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ]
}
